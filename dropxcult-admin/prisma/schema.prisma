generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(cuid())
  name            String
  email           String   @unique
  password        String
  isAdmin         Boolean  @default(false)
  
  // Profile Fields
  image           String?
  bio             String?  @default("Just another cult member.")
  
  // Cult Gamification
  rank            String   @default("Initiate")
  ordersCount     Int      @default(0)
  designsApproved Int      @default(0)
  
  // Royalty System
  royaltyPoints   Int      @default(0)
  royaltyEarnings Int      @default(0)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  orders          Order[]
  customRequests  CustomRequest[]
  likedRequests   CustomRequest[] @relation("UserLikes")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String
  price       Float
  category    String
  images      String[]
  sizes       String[] @default(["S", "M", "L", "XL", "XXL"])
  colors      String[]
  stock       Int      @default(0)
  isFeatured  Boolean  @default(false)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  orderItems  OrderItem[]
}

model Order {
  id              String      @id @default(cuid())
  userId          String?
  user            User?       @relation(fields: [userId], references: [id])
  
  orderItems      OrderItem[]
  
  // Shipping Address (Embedded in Mongoose, JSON in Postgres)
  shippingAddress Json
  
  paymentMethod   String
  
  // Payment Result (Embedded in Mongoose, JSON in Postgres)
  paymentResult   Json?
  
  itemsPrice      Float       @default(0.0)
  shippingPrice   Float       @default(0.0)
  taxPrice        Float       @default(0.0)
  totalPrice      Float       @default(0.0)
  
  isPaid          Boolean     @default(false)
  paidAt          DateTime?
  
  isDelivered     Boolean     @default(false)
  deliveredAt     DateTime?
  
  status          String      @default("Processing")
  
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

model OrderItem {
  id        String  @id @default(cuid())
  name      String
  qty       Int
  image     String
  price     Float
  size      String
  
  productId String
  product   Product @relation(fields: [productId], references: [id])
  
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
}

model CustomRequest {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  
  type            String
  color           String
  size            String
  status          String   @default("Pending")
  
  // Mixed types in Mongoose -> Json in Postgres
  textConfig      Json?
  layers          Json?
  designConfig    Json?
  
  frontImage      String?
  backImage       String?
  leftSleeveImage String?
  rightSleeveImage String?
  
  adminMessage    String?
  isPublicDesign  Boolean  @default(false)
  royaltyAccepted Boolean  @default(false)
  
  likes           User[]   @relation("UserLikes")
  salesCount      Int      @default(0)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
